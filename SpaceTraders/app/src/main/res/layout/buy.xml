<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shopping"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/robots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="buy"
        android:text="Robots"
        app:layout_constraintBottom_toTopOf="@+id/water"
        app:layout_constraintEnd_toEndOf="@+id/ore"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <Button
        android:id="@+id/food"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:onClick="buy"
        android:text="Food"
        app:layout_constraintBottom_toTopOf="@+id/furs"
        app:layout_constraintEnd_toEndOf="@+id/firearms"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/firearms" />

    <Button
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:layout_marginBottom="8dp"
        android:onClick="buy"
        android:text="Water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/robots"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/robots"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="buy"
        android:text="Medicine"
        app:layout_constraintBottom_toTopOf="@+id/narcotics"
        app:layout_constraintEnd_toEndOf="@+id/games"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/games"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/firearms"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="buy"
        android:text="FireArms"
        app:layout_constraintBottom_toTopOf="@+id/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:onClick="buy"
        android:text="Games"
        app:layout_constraintBottom_toTopOf="@+id/narcotics"
        app:layout_constraintEnd_toEndOf="@+id/furs"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/furs" />

    <Button
        android:id="@+id/narcotics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buy"
        android:text="Narcotics"
        app:layout_constraintBottom_toTopOf="@+id/ore"
        app:layout_constraintEnd_toEndOf="@+id/medicine"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="@+id/medicine" />

    <Button
        android:id="@+id/furs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:onClick="buy"
        android:text="Furs"
        app:layout_constraintBottom_toBottomOf="@+id/games"
        app:layout_constraintEnd_toEndOf="@+id/food"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/food" />

    <Button
        android:id="@+id/ore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="buy"
        android:text="Ore"
        app:layout_constraintBottom_toTopOf="@+id/robots"
        app:layout_constraintEnd_toEndOf="@+id/narcotics"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="@+id/narcotics"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="BUY ITEMS HERE"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/fa_price"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/food_price"
        app:layout_constraintStart_toEndOf="@+id/firearms"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/g_price"
        android:layout_width="92dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/m_price"
        app:layout_constraintEnd_toEndOf="@+id/fur_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fur_price" />

    <TextView
        android:id="@+id/n_price"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/o_price"
        app:layout_constraintEnd_toEndOf="@+id/m_price"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="@+id/m_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/r_price"
        android:layout_width="86dp"
        android:layout_height="58dp"
        android:layout_marginTop="416dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/w_price"
        app:layout_constraintEnd_toEndOf="@+id/o_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/o_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fur_price"
        android:layout_width="74dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/g_price"
        app:layout_constraintEnd_toEndOf="@+id/food_price"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/food_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/w_price"
        android:layout_width="89dp"
        android:layout_height="60dp"
        android:layout_marginTop="464dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintEnd_toEndOf="@+id/r_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/r_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/o_price"
        android:layout_width="77dp"
        android:layout_height="75dp"
        android:layout_marginTop="352dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/r_price"
        app:layout_constraintEnd_toEndOf="@+id/n_price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/n_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/food_price"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"

        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/fur_price"
        app:layout_constraintStart_toEndOf="@+id/food"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />

    <TextView
        android:id="@+id/m_price"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginTop="248dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/n_price"
        app:layout_constraintEnd_toEndOf="@+id/g_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/g_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />


</android.support.constraint.ConstraintLayout>
